{
  "name": "xrpckit",
  "version": "0.0.2",
  "description": "Type-safe, cross-platform RPC framework - define API contracts with Zod schemas",
  "type": "module",
  "license": "MIT",
  "author": "mwesox",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mwesox/xrpc.git",
    "directory": "packages/xrpckit"
  },
  "bugs": {
    "url": "https://github.com/mwesox/xrpc/issues"
  },
  "homepage": "https://github.com/mwesox/xrpc#readme",
  "keywords": ["xrpc", "rpc", "typescript", "zod", "schema", "api", "type-safe", "contract"],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "prepublishOnly": "npm run build",
    "release": "npm publish --//registry.npmjs.org/:_authToken=$NPM_XRPC_APIKEY"
  },
  "dependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
